<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:targetApi="ice_cream_sandwich">

    <LinearLayout
        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.ss.android.uilib.base.SSTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Code Size:"
                tools:ignore="HardcodedText"/>

            <com.ss.android.uilib.base.SSTextView
                android:id="@+id/code_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="2M"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.ss.android.uilib.base.SSTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cache Size:"
                tools:ignore="HardcodedText"/>

            <com.ss.android.uilib.base.SSTextView
                android:id="@+id/cache_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="2M"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.ss.android.uilib.base.SSTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Data Size:"
                tools:ignore="HardcodedText"/>

            <com.ss.android.uilib.base.SSTextView
                android:id="@+id/data_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="2M"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.ss.android.uilib.base.SSTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ex Code Size:"
                tools:ignore="HardcodedText"/>

            <com.ss.android.uilib.base.SSTextView
                android:id="@+id/ex_code_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="2M"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.ss.android.uilib.base.SSTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ex Cache Size:"
                tools:ignore="HardcodedText"/>

            <com.ss.android.uilib.base.SSTextView
                android:id="@+id/ex_cache_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="2M"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.ss.android.uilib.base.SSTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ex Data Size:"
                tools:ignore="HardcodedText"/>

            <com.ss.android.uilib.base.SSTextView
                android:id="@+id/ex_data_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="2M"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.ss.android.uilib.base.SSTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ram Size:"
                tools:ignore="HardcodedText"/>

            <com.ss.android.uilib.base.SSTextView
                android:id="@+id/ram_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="2M"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.ss.android.uilib.base.SSTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rom Size:"
                tools:ignore="HardcodedText"/>

            <com.ss.android.uilib.base.SSTextView
                android:id="@+id/rom_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="2M"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.ss.android.uilib.base.SSTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SD Card Size:"
                tools:ignore="HardcodedText"/>

            <com.ss.android.uilib.base.SSTextView
                android:id="@+id/sd_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="2M"/>

        </LinearLayout>

        <com.ss.android.uilib.base.SSTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Extra:"
            tools:ignore="HardcodedText"/>

        <com.ss.android.uilib.base.SSTextView
            android:id="@+id/extra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="2M2M2M2M2M2M"/>

    </LinearLayout>
</ScrollView>